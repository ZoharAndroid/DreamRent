<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Z200px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_refresh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/Z30px"
        android:gravity="center"
        android:text="掌上生活, 轻松方便"
        android:textColor="#00b80c"
        android:textSize="@dimen/Z32px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/Z30px"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/Z48px"
            android:layout_height="@dimen/Z48px">

            <ImageView
                android:id="@+id/img_refresh_logo"
                android:layout_width="@dimen/Z36px"
                android:layout_height="@dimen/Z36px"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <com.leslie.dream.mxzlw.widget.v7.CircleView
                android:id="@+id/img_refresh_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_refresh_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Z10px"
            android:gravity="center"
            android:text="下拉刷新"
            android:textColor="#666666"
            android:textSize="@dimen/Z32px" />

    </LinearLayout>


</RelativeLayout>