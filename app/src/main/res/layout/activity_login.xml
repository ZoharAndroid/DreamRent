<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_layout_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Z30px"
        android:layout_marginRight="@dimen/Z30px"
        android:layout_marginTop="@dimen/Z90px"
        android:background="@drawable/bg_white_c"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/Z90px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/Z32px"
                android:layout_height="@dimen/Z32px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Z20px"
                android:src="@drawable/phone" />

            <com.leslie.dream.mxzlw.widget.v7.BiuEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/Z16px"
                android:textColor="#323232"
                android:textColorHint="#a6a6a6"
                android:textSize="@dimen/Z30px"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d5d5d5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/Z90px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/Z32px"
                android:layout_height="@dimen/Z32px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Z20px"
                android:src="@drawable/passwd" />

            <com.leslie.dream.mxzlw.widget.v7.BiuEditText
                android:id="@+id/et_passwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="@dimen/Z16px"
                android:textColor="#323232"
                android:textColorHint="#a6a6a6"
                android:textSize="@dimen/Z30px"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Z72px"
        android:layout_marginLeft="@dimen/Z30px"
        android:layout_marginRight="@dimen/Z30px"
        android:layout_marginTop="@dimen/Z60px"
        android:background="@drawable/bg_btn_commit"
        android:gravity="center"
        android:text="登 录"
        android:textColor="#ffffff"
        android:textSize="@dimen/Z30px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Z30px"
        android:layout_marginRight="@dimen/Z30px"
        android:layout_marginTop="@dimen/Z20px">

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/Z10px"
            android:paddingRight="@dimen/Z10px"
            android:paddingTop="@dimen/Z10px"
            android:text="忘记密码？"
            android:textColor="#a6a6a6"
            android:textSize="@dimen/Z26px" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:paddingBottom="@dimen/Z10px"
            android:paddingLeft="@dimen/Z10px"
            android:paddingTop="@dimen/Z10px"
            android:text="扫码注册"
            android:textColor="#a6a6a6"
            android:textSize="@dimen/Z26px" />


    </RelativeLayout>



</LinearLayout>
