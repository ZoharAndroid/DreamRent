<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_circle_white">

    <TextView
        android:layout_margin="@dimen/Z20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话号码"
        android:textColor="@color/default_color"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/default_color" />

    <TextView
        android:id="@+id/tv_admin_phone"
        android:layout_margin="@dimen/Z20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="19sp"/>

    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_width="@dimen/Z500px"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_circle_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_tv_call_cancel"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/Z55px"
            android:layout_gravity="center"
            android:layout_margin="@dimen/Z20px"
            android:background="@drawable/btn_bg_style"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/default_color"
            android:textSize="@dimen/Z30px" />

        <TextView
            android:id="@+id/dialog_tv_call_add_contacts"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/Z55px"
            android:layout_gravity="center"
            android:layout_margin="@dimen/Z20px"
            android:background="@drawable/btn_bg_style"
            android:gravity="center"
            android:text="添加到通讯录"
            android:textColor="@color/default_color"
            android:textSize="@dimen/Z30px" />

    </LinearLayout>

</LinearLayout>
