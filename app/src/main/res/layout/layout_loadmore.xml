<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:minHeight="@dimen/Z150px">

    <LinearLayout
        android:id="@+id/footer_ll_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/footer_img_empty"
            android:layout_width="@dimen/Z80px"
            android:layout_height="@dimen/Z80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/Z30px"
            android:layout_marginRight="@dimen/Z30px" />

        <TextView
            android:id="@+id/footer_tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/Z30px"
            android:layout_marginRight="@dimen/Z30px"
            android:layout_marginTop="@dimen/Z20px"
            android:text="暂无数据"
            android:textColor="#999999"
            android:textSize="@dimen/Z30px" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_ll_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.leslie.dream.mxzlw.widget.v7.ProgressImageView
            android:id="@+id/footer_img_loading"
            android:layout_width="@dimen/Z60px"
            android:layout_height="@dimen/Z60px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/spinner_inner_holo"/>

        <TextView
            android:id="@+id/footer_tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/Z10px"
            android:text="加载中"
            android:textColor="#999999"
            android:textSize="@dimen/Z30px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_ll_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/footer_tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="已加载全部"
            android:textColor="#999999"
            android:textSize="@dimen/Z30px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_ll_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/footer_tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/Z30px"
            android:text="加载出错"
            android:textColor="#999999"
            android:textSize="@dimen/Z30px" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer_ll_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/Z200px"
        android:visibility="gone">


    </RelativeLayout>


</RelativeLayout>