<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="15dip"
        android:id="@+id/ll_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_house_facility_image"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/example_bingxiang" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/tv_house_facility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_house_facility_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:text="冰箱"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:textColor="@color/colorProjectYellow"
        android:id="@+id/tv_house_facility_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_0"
        android:text="1"
        android:textSize="14sp" />


</RelativeLayout>