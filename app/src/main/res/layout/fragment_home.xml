<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.leslie.dream.mxzlw.fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/ll_home_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/search_layout"/>


        <FrameLayout
            android:id="@+id/fl_home_top_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <FrameLayout
            android:id="@+id/fl_home_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RadioGroup
            android:layout_marginTop="10dip"
            android:background="@android:color/white"
            android:id="@+id/rg_home_tab_select_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:paddingLeft="15dip"
                android:paddingTop="15dip"
                android:paddingRight="15dip"
                android:drawablePadding="10dip"
                android:id="@+id/rb_home_tab_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/home_tab_bottom_selector"
                android:gravity="center"
                android:text="房屋推荐"
                android:textColor="@drawable/home_tab_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_home_tab_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawableBottom="@drawable/home_tab_bottom_selector"
                android:drawablePadding="10dip"
                android:gravity="center"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="15dip"
                android:text="托管出租"
                android:textColor="@drawable/home_tab_text_color"
                android:textSize="16sp" />
        </RadioGroup>

        <FrameLayout
            android:background="@android:color/white"
            android:id="@+id/fl_home_recommend_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>


    </LinearLayout>
</ScrollView>