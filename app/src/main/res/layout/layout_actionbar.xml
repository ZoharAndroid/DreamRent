<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionbar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="38px"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/actionbar_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Z88px">


        <RelativeLayout
            android:id="@+id/actionbar_back_rl"
            android:layout_width="@dimen/Z88px"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/actionbar_back_img"
                android:layout_width="@dimen/Z32px"
                android:layout_height="@dimen/Z32px"
                android:layout_centerInParent="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/Z36px" />

        <RelativeLayout
            android:id="@+id/actionbar_menu_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:minWidth="@dimen/Z88px">

            <ImageView
                android:id="@+id/actionbar_menu_img"
                android:layout_width="@dimen/Z44px"
                android:layout_height="@dimen/Z44px"
                android:layout_centerInParent="true"
                android:background="#a1a1a1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/actionbar_menu_img_hint"
                android:layout_width="@dimen/Z10px"
                android:layout_height="@dimen/Z10px"
                android:layout_above="@id/actionbar_menu_img"
                android:layout_marginBottom="@dimen/N10px"
                android:layout_marginLeft="@dimen/N10px"
                android:layout_toRightOf="@id/actionbar_menu_img"
                android:background="#f00"
                android:visibility="gone" />

            <TextView
                android:id="@+id/actionbar_menu_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/actionbar_menu_img"
                android:layout_marginBottom="@dimen/N12px"
                android:layout_marginLeft="@dimen/N8px"
                android:layout_toRightOf="@id/actionbar_menu_img"
                android:background="#f00"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="@dimen/Z20px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/actionbar_menu_tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/Z128px"
                android:layout_marginLeft="@dimen/Z20px"
                android:layout_marginRight="@dimen/Z20px"
                android:layout_toLeftOf="@+id/actionbar_menu_tv"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/Z30px" />

            <TextView
                android:id="@+id/actionbar_menu_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/Z44px"
                android:minWidth="@dimen/Z44px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/Z20px"
                android:layout_marginRight="@dimen/Z20px"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/Z30px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>
</LinearLayout>