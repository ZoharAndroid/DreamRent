<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/ll_tabs"
        android:background="#c3c3c3" />

    <RelativeLayout
        android:id="@+id/rl_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_line"/>

    <LinearLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Z98px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="@dimen/Z40px"
                android:layout_height="@dimen/Z40px"
                android:src="@drawable/bg_home_home" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Z4px"
                android:text="首页"
                android:textColor="@drawable/tc_main_home"
                android:textSize="@dimen/Z24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_category"
                android:layout_width="@dimen/Z40px"
                android:layout_height="@dimen/Z40px"
                android:src="@drawable/bg_home_cagetory" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Z4px"
                android:text="分类"
                android:textColor="@drawable/tc_main_home"
                android:textSize="@dimen/Z24px" />
        </LinearLayout>


       <LinearLayout
            android:id="@+id/ll_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical"
           android:visibility="gone"
            >

            <ImageView
                android:id="@+id/img_service"
                android:layout_width="@dimen/Z40px"
                android:layout_height="@dimen/Z40px"
                android:src="@drawable/bg_home_service" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Z4px"
                android:text="服务"
                android:textColor="@drawable/tc_main_home"
                android:textSize="@dimen/Z24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_myself"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_home_tab"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_myself"
                android:layout_width="@dimen/Z40px"
                android:layout_height="@dimen/Z40px"
                android:src="@drawable/bg_home_myself" />

            <TextView
                android:id="@+id/tv_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Z4px"
                android:text="我的"
                android:textColor="@drawable/tc_main_home"
                android:textSize="@dimen/Z24px" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>