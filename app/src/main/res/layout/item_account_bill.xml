<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Z20px"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/bill_msg_tv"
            android:layout_marginTop="@dimen/Z10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息"
            android:textSize="@dimen/Z25px"
            android:textColor="@color/default_txt_color"/>
        <TextView
            android:id="@+id/bill_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Z10px"
            android:layout_marginTop="@dimen/Z10px"
            android:text="时间"
            android:textSize="@dimen/Z25px"
            android:textColor="@color/default_txt_color"/>
    </LinearLayout>

        <TextView
            android:id="@+id/bill_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/Z20px"
            android:text="88.88元"
            android:textSize="@dimen/Z40px"
            android:textColor="@color/default_txt_color"/>
    </RelativeLayout>
</LinearLayout>
