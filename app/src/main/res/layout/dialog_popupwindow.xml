<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_cancel"
        android:layout_marginLeft="@dimen/Z40px"
        android:layout_marginRight="@dimen/Z40px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textStyle="bold"
        android:textSize="@dimen/Z40px"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/Z20px"
        android:layout_above="@+id/btn_cancel"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/pop_wx_img"
                android:layout_marginLeft="@dimen/Z50px"
                android:layout_marginRight="@dimen/Z50px"
                android:layout_width="@dimen/Z150px"
                android:layout_height="@dimen/Z150px"
                android:src="@drawable/wechat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/pop_zfb_img"
                android:layout_marginLeft="@dimen/Z50px"
                android:layout_marginRight="@dimen/Z50px"
                android:layout_width="@dimen/Z150px"
                android:layout_height="@dimen/Z150px"
                android:src="@drawable/alipay"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/white"/>
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>
