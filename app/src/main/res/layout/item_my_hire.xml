<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Z20px"
        android:layout_marginRight="@dimen/Z20px">
        <ImageView
            android:id="@+id/myhire_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Z300px"
            android:src="@drawable/context"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Z20px"
        android:layout_marginRight="@dimen/Z20px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/myhire_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="房源名"
            android:textSize="@dimen/Z35px"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/myhire_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="地址"
            android:textSize="@dimen/Z30px"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/myhire_item_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8888/月"
            android:textSize="@dimen/Z40px"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginLeft="@dimen/Z20px"
        android:layout_marginRight="@dimen/Z20px"
        android:background="@color/color_line_gray" />

</LinearLayout>
