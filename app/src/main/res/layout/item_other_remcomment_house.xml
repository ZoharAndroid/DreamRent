<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_width="match_parent"
        android:layout_height="220dip">
        
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:id="@+id/iv_house_item_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- 房屋类型 -->
        <TextView
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:padding="3dip"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:textSize="14sp"
            android:id="@+id/tv_house_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="办公室"/>




        <TextView
            android:textColor="@android:color/white"
            android:padding="5dip"
            android:id="@+id/tv_house_item_title"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:text="名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_marginTop="20dip"
            android:layout_below="@id/tv_house_item_title"
            android:padding="5dip"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:text="价格"
            android:id="@+id/tv_house_item_price"/>


        <!-- remark -->
        <TextView
            android:layout_toRightOf="@id/tv_house_item_type"
            android:layout_marginBottom="20dip"
            android:layout_above="@id/tv_house_item_title"
            android:layout_marginLeft="10dip"
            android:padding="5dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:id="@+id/tv_house_item_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx" />

        
    </RelativeLayout>

</RelativeLayout>